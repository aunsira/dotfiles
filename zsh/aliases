alias drmi='docker rmi'
alias e='exit'
alias fco='git fetch && git checkout $1'
alias fetch='git fetch'
alias ff='fixup; git push --force origin $(git_branch_name)'
alias fixup='git add -A && git commit --fixup $(current-commit) && git rebase -i --autosquash $(before-fixup-commit)'
alias fp='git fetch && git pull --rebase origin $(git rev-parse --abbrev-ref HEAD)'
alias fs='bundle install && foreman start --procfile Procfile'
alias ga='git add -A'
alias gaf='git add $(gf)'
alias gag='git add -A && git commit --amend --no-edit && git push -f'
alias gagc='git add -A && git commit -a'
alias gbd='git branch -D $(gb)'
alias gc='git commit -v'
alias gcb='git checkout $(gb)'
alias gcf='git checkout $(gf)'
alias gch='git checkout $(gh)'
alias gco='git checkout'
alias gdc='git diff --cached | less -R'
alias gdm='git diff master || git diff main | less -R'
alias gdo='git diff origin/$(current-branch)...HEAD | less -R'
alias gdp='git diff --patience | less -R'
alias ge='git edit'
alias gl='git lg'
alias gld='git lg -p --since="1 day ago"'
alias glm="git log --pretty=format:'%h | %cd | %an | %s' -n 15"
alias glo='git log --oneline -n 15'
alias glp='git lg -p'
alias gls='git log --stat -n 5'
alias gom-done="git-on-master && git-done"
alias gp='git push'
alias gpf='git push --force origin $(git_branch_name)'
alias gpl='git pull --rebase --autostash origin $(git rev-parse --abbrev-ref HEAD)'
alias gpo='git push origin'
alias gra='git rebase --abort'
alias grc='git rebase --continue'
alias grh='git reset HEAD^'
alias grs='git rebase --skip'
alias gs='git show'
alias gv='vim +GV +"autocmd BufWipeout <buffer> qall"'
alias h='sync'
alias hb='gh browse'
alias hc='hub compare'
alias hpr='gh pr create -a aunsira'
alias hps='gh pr view --web'
alias k9='kill -9'
alias killbeam='killall -9 beam.smp'
alias killruby='killall -9 ruby'
alias l='ls -al'
alias ll="ls -FGlh"
alias lo='glo'
alias ls="ls -AFG"
alias m='git checkout master || git checkout main'
alias master='git checkout master || git checkout main'
alias merge='gh pr merge --squash --delete-branch && pl'
alias mon='nodemon '
alias mpn='(git checkout master || git checkout main) && (git pull origin master || git pull origin main) && git-nuke $(gb)'
alias n='nuke'
alias notes='cd ~/Library/CloudStorage/Dropbox/notes/'
alias nuke='git-nuke $(gb)'
alias on3000='lsof -i tcp:3000'
