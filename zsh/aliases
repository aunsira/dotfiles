alias rdc='rails db:create'
alias rdm='rails db:migrate'
alias rdtp='rails db:test:prepare'
alias ready='gh pr ready'
alias redis='redis-server /usr/local/etc/redis.conf &'
alias repush='git pull --rebase origin $(git rev-parse --abbrev-ref HEAD) && git push'
alias reset='git reset --hard head'
alias retag='ctags -a -Rf tags --exclude=.git --exclude="*.min.js" --exclude=node_modules --exclude=admin/node_modules --exclude=tmp 2>/dev/null'
alias review='PAGER=less gh pr diff'
alias rff='bundle exec rspec --fail-fast'
alias rr='bin/rails routes'
alias rs='bundle check && rails s'
alias ss='spring stop'
