command = /opt/homebrew/bin/fish --login --interactive

font-family = Berkeley Mono Medium SemiCondensed
font-size = 15.0

cursor-style = block

title = " "
theme = Builtin Tango Dark

confirm-close-surface = false
macos-option-as-alt = true
macos-titlebar-style = hidden
link-url = false

mouse-hide-while-typing = true

window-decoration = false
window-padding-balance = true
window-padding-x = 0
window-padding-y = 0
window-padding-color = extend

# Tmux (https://github.com/ghostty-org/ghostty/discussions/3309)
# ASCII Character Set (https://www3.rocketsoftware.com/bluezone/help/v42/en/bzadmin/APPENDIX_C/ASCII_Character_Set.htm)
keybind = super+digit_1=text:\x061
keybind = super+digit_2=text:\x062
keybind = super+digit_3=text:\x063
keybind = super+digit_4=text:\x064
keybind = super+t=text:\x06c
keybind = super+z=text:\x06z
keybind = super+f=text:\x06q
keybind = super+left_bracket=text:\x06\x20
keybind = super+right_bracket=text:\x06\x0e
keybind = super+slash=text:\x06[
keybind = super+shift+left_bracket=text:\x06p
keybind = super+shift+right_bracket=text:\x06n
keybind = shift+enter=text:\x1b\r
